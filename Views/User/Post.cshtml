@model Twitt_prof.ViewModels.PostViewModel
@{
    ViewData["Title"] = "Post";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Twitea</h1>
<a asp-action="TwitHome" class="btn btn-warning text-light ">volver atras</a>
<form enctype="multipart/form-data" asp-action="TwitHome" method="post">
    <div class="form-group">
        <label asp-for="Post">Escribe tu Twitt</label>
        <textarea asp-for="Post" class="form-control" id="Post" rows="3"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="foto"></label>
          <input  asp-for="foto" class="form-control"/>
        <span asp-validation-for="foto" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-block btn-info">Twittear</button>
</form>